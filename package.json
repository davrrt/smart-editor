{
  "name": "@davrrt/smart-editor",
  "version": "1.0.0",
  "description": "Templating tool for creating and managing smart contracts.",
  "license": "UNLICENSED",
  "author": "EquiSafe Team",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "commit": "git-cz",
    "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,css,scss,html,json,md,mdx,markdown,graphql,prisma}\" && sort-package-json",
    "format:check": "prettier --check \"src/**/*.{ts,js,tsx,jsx,css,scss,html,json,md,mdx,markdown,graphql,prisma}\"",
    "lint": "eslint --ext .ts,.js,.tsx,.jsx src",
    "lint:fix": "eslint --ext .ts,.js,.tsx,.jsx src --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "setup-git-aliases": "./setup-git-aliases.sh",
    "sort-package-json": "sort-package-json",
    "test": "jest",
    "preversion": "npm run build",
    "postbuild": "cp package.publish.json dist/package.json"

  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@swc/core": "^1.13.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.0.0",
    "commit-and-tag-version": "^12.5.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.1.1",
    "semantic-release": "^24.2.7",
    "sort-package-json": "^3.4.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davrrt/smart-editor.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "restricted"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.1.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.3.9",
      "inflight": "npm:undep-inflight@1.0.1",
      "source-map": "^0.7.4"
    }
  }
}
